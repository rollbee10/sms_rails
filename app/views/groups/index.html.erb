<!-- start: page -->
<section class="panel">
  <header class="panel-heading">
    <div class="pull-right">
      <%= link_to 'New Group', new_group_path %>
    </div>
    <h2 class="panel-title">Group List</h2>

  </header>
  <div class="panel-body">
    <table class="table table-bordered table-striped mb-none" id="datatable-editable">
      <thead>
      <tr>
        <th>Number</th>
        <th>Group Name</th>
        <th>Count</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @groups.each_with_index do |group,index| %>
        <tr class="gradeX">
          <td><%= index +1 %></td>
          <td><%= group.name %></td>
          <td><%= group.contacts.count %></td>
          <td class="actions">
            <%= link_to '<i class="fa fa-eye"></i>'.html_safe, group_path(group), 'class': 'on-default' %>
            <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_group_path(group), 'class': 'on-default' %>
            <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, group_path(group), method: :delete,
                        data: {confirm: "Are you sure you want to delete the group?"},
                        class: "on-default" %>
            <a href="#" class="hidden on-editing save-row"><i class="fa fa-save"></i></a>
            <a href="#" class="hidden on-editing cancel-row"><i class="fa fa-times"></i></a>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</section>
<!-- end: page -->