<!-- start: page -->
<div class="row">
  <div class="col-md-12">
    <%= form_for(@contact, html: {class: "form-horizontal", role:"form"}) do |f| %>
      <section class="panel">
        <header class="panel-heading">
          <div class="pull-right">
            <%= link_to 'Back', groups_path %>
          </div>
          <h2 class="panel-title"><%= @group.name %></h2>
        </header>
        <div class="panel-body">
          <div class="col-md-6">
            <div class="form-group">
              <label class="col-sm-4 control-label">Contact Name</label>
              <div class="col-sm-8">
                <%= f.text_field :name, class: 'form-control', required:'true', placeholder:'Please input contact name' %>
                <%= f.hidden_field :group_id, value: @group.id%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-4 control-label"></label>
              <div class="col-md-8">
                <%= f.submit 'Add', class: 'btn btn-primary' %>
                <button type="reset" class="btn btn-default">Reset</button>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label class="col-sm-4 control-label">Mobile Number</label>
              <div class="col-sm-8">
                <%= f.text_field :number, class: 'form-control', required:'true', placeholder:'Please input contact name' %>
              </div>
            </div>
          </div>
        </div>
      </section>
    <% end %>
  </div>
</div>
<section class="panel">
  <header class="panel-heading">
    <h2 class="panel-title">Contact List</h2>
  </header>
  <div class="panel-body">
    <table class="table table-bordered table-striped mb-none" id="datatable-editable">
      <thead>
      <tr>
        <th>Number</th>
        <th>Contact Name</th>
        <th>Mobie Number</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @contacts.each_with_index do |contact,index| %>
        <tr class="gradeX">
          <td><%= index +1 %></td>
          <td><%= contact.name %></td>
          <td><%= contact.number %></td>
          <td class="actions">
            <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, contact_path(contact), method: :delete,
                        data: {confirm: "Are you sure you want to delete the contact?"},
                        class: "on-default" %>
            <a href="#" class="hidden on-editing save-row"><i class="fa fa-save"></i></a>
            <a href="#" class="hidden on-editing cancel-row"><i class="fa fa-times"></i></a>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</section>
<!-- end: page -->