<%= form_for(@distribution, html: {class: "form-horizontal", role:"form"}) do |f| %>
  <section class="panel">
    <header class="panel-heading">
      <h2 class="panel-title">New Distribution</h2>
    </header>
    <div class="panel-body">
      <div class="col-md-offset-2 col-md-8">
        <div class="form-group">
          <label class="col-sm-2 control-label">Distribution Name</label>
          <div class="col-sm-9">
            <%= f.text_field :name, class: 'form-control', required:'true', placeholder:'Please input group name' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label"></label>
          <div class="col-sm-9">
            <%= f.submit 'Add', class: 'btn btn-primary' %>
            <%= link_to 'Back',  distributions_path , class: 'btn btn-default' %>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
