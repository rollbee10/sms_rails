<!-- start: page -->
<section class="panel">
  <header class="panel-heading">
    <div class="pull-right">
      <%= link_to 'New User', new_admin_user_path%>
    </div>
    <h2 class="panel-title">User List</h2>

  </header>
  <div class="panel-body">
    <table class="table table-bordered table-striped mb-none" id="user-datatable-editable">
      <thead>
      <tr>
        <th>Number</th>
        <th>User Name</th>
        <th>Email</th>
        <th>Sms Count</th>
        <th>Role</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each_with_index do |user,index| %>
          <tr class="gradeX">
            <td><%= index +1 %></td>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.sms_count %></td>
            <td><%= user.role %></td>
            <td class="actions">
              <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_admin_user_path(user), 'class': 'on-default' %>
              <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, admin_user_path(user), method: :delete,
                          data: {confirm: "Are you sure you want to delete the group?"},
                          class: "on-default" %>
              <a href="#" class="hidden on-editing save-row"><i class="fa fa-save"></i></a>
              <a href="#" class="hidden on-editing cancel-row"><i class="fa fa-times"></i></a>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</section>
<!-- end: page -->