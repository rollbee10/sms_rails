<!-- start: page -->
<section class="panel">
  <header class="panel-heading">
    <div class="pull-right">
      <%= link_to 'New Filter', new_admin_filter_path%>
    </div>
    <h2 class="panel-title">Filter List</h2>

  </header>
  <div class="panel-body">
    <table class="table table-bordered table-striped mb-none" id="filter-datatable-editable">
      <thead>
      <tr>
        <th>Number</th>
        <th>FID Name</th>
        <th>Type</th>
        <th>Parameter</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @filters.each_with_index do |filter,index| %>
          <tr class="gradeX">
            <td><%= index +1 %></td>
            <td><%= filter.fid %></td>
            <td><%= filter.filter_type %></td>
            <td><%= filter.parameter %></td>
            <td class="actions">
              <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, admin_filter_path(filter), method: :delete,
                          data: {confirm: "Are you sure you want to delete the group?"},
                          class: "on-default" %>
              <a href="#" class="hidden on-editing save-row"><i class="fa fa-save"></i></a>
              <a href="#" class="hidden on-editing cancel-row"><i class="fa fa-times"></i></a>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</section>
<!-- end: page -->