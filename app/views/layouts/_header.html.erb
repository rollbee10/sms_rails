<div class="logo-container">
  <a href="../" class="logo">
    <img src="/assets/images/logo.png" height="35" alt="JSOFT Admin" />
  </a>
  <div class="visible-xs toggle-sidebar-left" data-toggle-class="sidebar-left-opened" data-target="html" data-fire-event="sidebar-left-opened">
    <i class="fa fa-bars" aria-label="Toggle sidebar"></i>
  </div>
</div>

<!-- start: search & user box -->
<div class="header-right">

  <span class="separator"></span>
  <span>Balance : <%= current_user.sms_count %></span>
  <span class="separator"></span>

  <div id="userbox" class="userbox">
    <a href="#" data-toggle="dropdown">
      <figure class="profile-picture">
      </figure>
      <div class="profile-info" data-lock-name="" data-lock-email="">
        <span class="name"><%= current_user.username %></span>
        <span class="role"><%= current_user.role %></span>
      </div>

      <i class="fa custom-caret"></i>
    </a>

    <div class="dropdown-menu">
      <ul class="list-unstyled">
        <li class="divider"></li>
        <li>
          <%= link_to '<i class="fa fa-user"></i> My Profile'.html_safe, edit_user_registration_path, role: 'menuitem', tabindex: '-1' %>
        </li>
        <li>
          <%=link_to '<i class="fa fa-power-off"></i> Logout'.html_safe, destroy_user_session_path, method: :delete %>
        </li>
      </ul>
    </div>
  </div>
  
</div>
<!-- end: search & user box -->