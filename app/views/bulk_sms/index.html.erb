      <section class="panel">
        <header class="panel-heading">
          <h2 class="panel-title">Send Bulk SMS</h2>
        </header>
        <div class="panel-body">
          <div class="form-group">
            <label class="col-sm-2 control-label">Personalise</label>

            <div class="col-sm-9">
              <div class="checkbox-custom checkbox-primary">
                <input type="checkbox" checked="" id="checkboxExample1">
                <label for="checkboxExample1"></label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Remove Duplicates</label>

            <div class="col-sm-9">
              <div class="checkbox-custom checkbox-primary">
                <input type="checkbox" checked="" id="checkboxExample1">
                <label for="checkboxExample1"></label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Acculync</label>

            <div class="col-sm-9">
              <div class="checkbox-custom checkbox-primary">
                <input type="checkbox" checked="" id="checkboxExample1">
                <label for="checkboxExample1"></label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Message Type</label>
            <div class="col-sm-9">
              <select id="company" class="form-control" required>
                <option value="">Select</option>
                <option value="apple">Text</option>
                <option value="google">Flash</option>
                <option value="microsoft">Arabic</option>
                <option value="yahoo">Unicode</option>
              </select>
              <label class="error" for="company"></label>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-2 control-label">File Upload</label>
            <div class="col-md-6">
              <div class="fileupload fileupload-new" data-provides="fileupload">
                <div class="input-append">
                  <div class="uneditable-input">
                    <i class="fa fa-file fileupload-exists"></i>
                    <span class="fileupload-preview"></span>
                  </div>
                  <span class="btn btn-default btn-file">
